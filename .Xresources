!! URxvt

! How it functions
URxvt.perl-ext-common: default,xkr-clipboard,pasta,font-size,matcher
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.urgentOnBell: true

! How it looks
URxvt.font: xft:JetBrains Mono:pixelsize=14:antialias=true,xft:Braille:pixelsize=14:antialias=true
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.geometry: 92x24

! URLs
URxvt.url-launcher: /usr/bin/firefox
URxvt.underlineURLs: True
URxvt.matcher.button: 1

! Clipboard
URxvt.keysym.Control-V: perl:pasta:paste
URxvt.keysym.Control-C: perl:clipboard:copy

! Font size
URxvt.keysym.Control-j:       perl:font-size:increase
URxvt.keysym.Control-k:       perl:font-size:decrease
